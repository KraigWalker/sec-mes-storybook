{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "creationTimestamp": null,
    "name": "${NAME}"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "Auto-Mate - Composer"
        },
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}",
        "namespace": "${NAMESPACE}"
      },
      "spec": {
        "ports": [
          {
            "name": "8443-tcp",
            "port": 8443,
            "protocol": "TCP",
            "targetPort": 8443
          }
        ],
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "generation": 4,
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "annotations": {
          "openshift.io/generated-by": "Auto-Mate - Composer"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:latest"
              }
            }
          }
        ],
        "replicas": "${DEFAULT_SCALE}",
        "test": false,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            },
            "annotations": {
              "openshift.io/generated-by": "Auto-Mate - Composer"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": "${NAME}:latest",
                "ports": [
                  {
                    "containerPort": 8443,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "TZ",
                    "value": "Europe/London"
                  },
                  {
                    "name": "CHIEFTAIN_INSTANCEID",
                    "value": "${CHIEFTAIN_INSTANCEID}"
                  },
                  {
                    "name": "CHIEFTAIN_TOKENID",
                    "value": "${CHIEFTAIN_TOKENID}"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "50m",
                    "memory": "40Mi"
                  },
                  "limits": {
                    "cpu": "100m",
                    "memory": "60Mi"
                  }
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "Always",
                "livenessProbe": {
                  "failureThreshold": 10,
                  "httpGet": {
                    "path": "/",
                    "port": 8443,
                    "scheme": "HTTPS"
                  },
                  "initialDelaySeconds": 60,
                  "periodSeconds": 30,
                  "successThreshold": 1,
                  "timeoutSeconds": 10
                },
                "readinessProbe": {
                  "failureThreshold": 3,
                  "httpGet": {
                    "path": "/",
                    "port": 8443,
                    "scheme": "HTTPS"
                  },
                  "initialDelaySeconds": 60,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "timeoutSeconds": 10
                }
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-b-external",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "host": "${EXTERNAL_B_URL}",
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-yb-external",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "host": "${EXTERNAL_YB_URL}",
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-cb-external-new",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "host": "${EXTERNAL_CB_URL}",
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-vm-external-new",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "host": "${EXTERNAL_VM_URL}",
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-internal",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "host": "${INTERNAL_URL}",
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    }
  ],
  "parameters": [
    {
      "description": "Name of image stream of location of docker image to be used",
      "name": "NAME",
      "required": true
    },
    {
      "description": "URL used to access for B external",
      "name": "EXTERNAL_B_URL",
      "required": true
    },
    {
      "description": "URL used to access CB external",
      "name": "EXTERNAL_CB_URL",
      "required": true
    },
    {
      "description": "URL used to access YB external",
      "name": "EXTERNAL_YB_URL",
      "required": true
    },
    {
      "description": "URL used to access VM external",
      "name": "EXTERNAL_VM_URL",
      "required": true
    },
    {
      "description": "URL used to access webapp internally",
      "name": "INTERNAL_URL",
      "required": true
    },
    {
      "description": "Chieftain Instance ID",
      "displayName": "InstanceID",
      "name": "CHIEFTAIN_INSTANCEID"
    },
    {
      "description": "Chieftain Token ID",
      "displayName": "TokenID",
      "name": "CHIEFTAIN_TOKENID"
    },
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "NAMESPACE"
    },
    {
      "description": "Number of replicas to be deployed",
      "displayName": "Replicas",
      "name": "DEFAULT_SCALE",
      "required": false,
      "value": "1"
    }
  ]
}
